{% extends 'base.html.twig' %}

{% block title %}Hospital{% endblock %}

{% block body %}
    <meta http-equiv="refresh" content="5"/>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Specialist Needed</th>
            <th scope="col">Day Created</th>
            <th scope="col">Average Time (in seconds)</th>
        </tr>
        </thead>
        <tbody>
        {% for specialist in specialists %}
            <tr>
                <td>{{ specialist.title }}</td>
                <td>{{ specialist.day }}</td>
                <td>{{ specialist.service_avg }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}